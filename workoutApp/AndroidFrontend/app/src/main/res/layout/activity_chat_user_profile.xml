<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ChatStuff.ChatUserProfileActivity"
    android:background="@color/colorPrimaryDark">

    <TextView
        android:id="@+id/profile_display_name"
        android:layout_width="262dp"
        android:layout_height="57dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="74dp"
        android:gravity="center"
        android:text="Display Name"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <Button
        android:id="@+id/profile_friend_request"
        android:layout_width="216dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="107dp"
        android:text="Send Friend Request" />

    <TextView
        android:id="@+id/profile_user_status"
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="76dp"
        android:layout_marginTop="152dp"
        android:gravity="center"
        android:text="User Status Goes Here"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/profile_friend_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="169dp"
        android:text="Total Friends: "
        android:textColor="@color/white" />

    <Button
        android:id="@+id/profile_friend_request_deny"
        android:layout_width="206dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="49dp"
        android:text="Reject Friend Request" />
</RelativeLayout>